<div class="container-edit">
<h2 class="title-edit">Edit my account</h2>
  <div class="account-information">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="field">
      <%= f.label :new_password %> <i>(<%= @minimum_password_length %> characters minimum)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="profile-picture">
    <% if user_signed_in? %>
      <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, class: "rounded-circle", id: "pp-edit"%> 
      <% end %>
    <% else %>
      <%= image_tag "pp-edit.jpg", class: "rounded-circle", id: "pp-edit"%>
    <% end %>
    <div class="field">
      <%= f.label :profile_picture %><br/>
      <%= f.file_field :avatar%>
    </div>
  </div>
  <div class="actions">
      <%= f.submit "Update", :class => "btn-update" %>   
  <% end %>
    <div class="unhappy">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn-cancel" %>
    </div>
    <i class="fas fa-angle-double-left"></i> <%= link_to "Back to previous page", :back, :class =>"go-back" %>
  </div>
</div>