


<%= form_for(@cards) do |f| %>



	<%= f.label :Discipline %>
	<%= f.collection_select :id, Discipline.order(:name), :id, :name, {include_blank: false} %>

	<%= f.label :activity_title %><br>
	<%= f.text_field :activity_title%><br>

	<%= f.label :short_description %><br>
	<%= f.text_field :short_description%><br>

	<%= f.label :long_description %><br>
	<%= f.text_field :long_description %><br>

	<%= f.label :organization %><br>
	<%= f.select :organization, Card.organizations.keys%><br>

	<%= f.label :address %><br>
	<%= f.text_field :address%><br>

	<%= f.label :city %><br>
	<%= f.select :city, Card.cities.keys %><br>

	<%= f.label :country %><br>
	<%= f.text_field :country%><br>

	<%= f.label :price %><br>
	<%= f.text_field :price%><br>

	<%= f.label :length %><br>
	<%= f.text_field :length%><br>

	<%= f.label :opening_hour %><br>
	<%= f.time_select :opening_hour, { prompt: {ampm: true}, minute_step: 15 } %>



	<%= f.label :closing_hour %><br>
	<%= f.time_select :closing_hour, { prompt: {ampm: true}, minute_step: 15 } %>

	<%= f.label :whatsapp %><br>
	<%= f.text_field :whatsapp %><br>

	<%= f.label :facebook %><br>
	<%= f.text_field :facebook %><br>

	<%= f.label :instagram %><br>
	<%= f.text_field :instagram %><br>

	<%= f.label :image_discipline %><br>
	<%= f.file_field :image_discipline %><br>





	   <%= f.submit %><br>


	  

<% end %> 	